import { useState } from "react";

function Counter() {
    const [count, setCount] = useState(0);
    function handleStartBtn() {
        setInterval(() => {
            setCount((prev) => prev + 1)
            console.log("anything");
        }, 1000)
    }
    return (
        <>
            <p>count :{count}</p>
            <button onClick={handleStartBtn}>Start</button>
            <button>Stop</button>
            <button>reset</button>
        </>
    );
}

export default Counter;
